<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="tests" />
            <file name="src/Foundry/Updater/Updater.php" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <ImplementedReturnTypeMismatch>
            <errorLevel type="suppress">
                <directory name="src/Foundry/Factory" />
            </errorLevel>
        </ImplementedReturnTypeMismatch>

        <InternalMethod>
            <errorLevel type="suppress">
                <file name="src/Foundry/Configurator/FactoryConfigurator.php" />
            </errorLevel>
        </InternalMethod>

        <LessSpecificImplementedReturnType>
            <errorLevel type="suppress">
                <directory name="src/Foundry/Factory" />
            </errorLevel>
        </LessSpecificImplementedReturnType>

        <LessSpecificReturnStatement>
            <errorLevel type="suppress">
                <directory name="src/Foundry/Factory" />
            </errorLevel>
        </LessSpecificReturnStatement>

        <LessSpecificReturnType>
            <errorLevel type="suppress">
                <directory name="src/Foundry/Factory" />
            </errorLevel>
        </LessSpecificReturnType>

        <MixedArgument>
            <errorLevel type="suppress">
                <file name="src/Foundry/Transformer/ProductTransformer.php" />
                <file name="src/Foundry/Updater/ProductUpdater.php" />
                <file name="src/Foundry/Updater/TaxonUpdater.php" />
            </errorLevel>
        </MixedArgument>

        <MixedArrayAssignment>
            <errorLevel type="suppress">
                <file name="src/Foundry/Transformer/TransformChannelsAttributeTrait.php" />
            </errorLevel>
        </MixedArrayAssignment>

        <MixedInferredReturnType>
            <errorLevel type="suppress">
                <file name="src/Symfony/ShopFixturesPlugin.php" />
            </errorLevel>
        </MixedInferredReturnType>

        <MixedMethodCall>
            <errorLevel type="suppress">
                <file name="src/Foundry/DefaultValues/OrderItemDefaultValues.php" />
            </errorLevel>
        </MixedMethodCall>

        <MixedReturnStatement>
            <errorLevel type="suppress">
                <file name="src/Symfony/ShopFixturesPlugin.php" />
            </errorLevel>
        </MixedReturnStatement>

        <MoreSpecificReturnType>
            <errorLevel type="suppress">
                <directory name="src/Foundry/Factory" />
            </errorLevel>
        </MoreSpecificReturnType>
    </issueHandlers>
</psalm>
